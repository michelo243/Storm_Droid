<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="16dp"
              android:layout_centerVertical="true"
              android:gravity="center_vertical"
              android:scrollbars="vertical"
              tools:context=".MainActivity">


    <TextView
            android:id="@+id/login_title"
            style="@style/LabelStyle"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textSize="45dp"
            android:text="@string/login_title"
            android:textColor="@color/stroke" />


        <!--<ImageView
                android:id="@+id/login_image_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_storm_v3" />-->

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/textview_cool"
            android:drawableLeft="@drawable/ic_person_black"
            android:drawablePadding="10dp"
            android:hint="Nom d'utilisateur"
            android:padding="10dp" />


        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/textview_cool"
            android:drawableLeft="@drawable/ic_lock_black"
            android:drawablePadding="10dp"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:padding="10dp" />


        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/btn_button_cool"
            android:text="Se connecter"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textColor="@color/btn_tv_text" />

</LinearLayout>